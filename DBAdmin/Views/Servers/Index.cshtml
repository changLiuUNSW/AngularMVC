<div data-ng-controller="AboutController">

    <div class="row alerts-container" data-ng-controller="AlertsCtrl" data-ng-show="alerts.length">
        <div class="col-xs-12">
            <alert data-ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)">{{alert.msg}}</alert>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="widget">
                <div class="widget-title">
                    <i class="fa fa-users"></i> Users
                    <button class="btn btn-sm btn-info pull-right" ng-click="toggleFilter(tableParams)" ng-if="!tableParams.settings().$scope.show_filter">
                        <i class="fa fa-plus"></i>Show Filters
                    </button>
                    <button class="btn btn-sm btn-info pull-right" ng-click="toggleFilter(tableParams)" ng-if="tableParams.settings().$scope.show_filter">
                        <i class="fa fa-minus"></i>Hide Filters
                    </button>
                    <div class="clearfix"></div>
                </div>
                <div class="widget-body no-padding">
                    <table class="table ng-table-rowselected" ng-table="tableParams" show-filter="false">
                        <tr ng-repeat="holiday in $data" data-ng-click="showDetail(holiday.id)">
                            <td data-title="'Holiday'" sortable="'description'" filter="{ 'description': 'text' }">
                                {{holiday.description}}
                            </td>
                            <td data-title="'Date'" sortable="'date'" filter="{ 'date': 'text' }">
                                {{holiday.date}}
                            </td>
                        </tr>

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="@Url.Content("~/Scripts/app/services/authService.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app/services/publicHolidayService.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app/controllers/aboutcontroller.js")" type="text/javascript"></script>
}